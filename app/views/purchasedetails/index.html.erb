<p id="notice"><%= notice %></p>

<h1>Purchasedetails</h1>

<table>
  <thead>
    <tr>
      <th>Purchase</th>
      <th>Product</th>
      <th>Saleprice</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchasedetails.each do |purchasedetail| %>
      <tr>
        <td><%= purchasedetail.purchase_id %></td>
        <td><%= purchasedetail.product_id %></td>
        <td><%= purchasedetail.saleprice %></td>
        <td><%= link_to 'Show', purchasedetail %></td>
        <td><%= link_to 'Edit', edit_purchasedetail_path(purchasedetail) %></td>
        <td><%= link_to 'Destroy', purchasedetail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

